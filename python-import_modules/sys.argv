#!/usr/bin/python3
import sys
if __name__ == "__main__":
    # sys.argv[0] proqramın adıdır, buna görə ondan sonra gələnləri saymalıyıq
    num_args = len(sys.argv) - 1  # arqumentlər sayı (proqramın adını çıxarırıq)
    if num_args == 0:
        print("No arguments.")
    else:
        print(f"Number of argument{'s' if num_args > 1 else ''}:")
        for i in range(1, num_args + 1):
            print(f"{i}: {sys.argv[i]}")
